<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:alpha="0.7"
    android:padding="8dp"
    android:clickable="false"
    android:longClickable="false">


    <TextView
        android:id="@+id/tvDatePlanning"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="Date"
        android:textSize="16sp"
        android:textColor="@color/textlistview"
        />

    <TextView
        android:id="@+id/tvHeurePlanning"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="Heure début - Heure fin"
        android:textSize="16sp"
        android:textColor="@color/textlistview"
        android:layout_below="@+id/tvDatePlanning"
        />

    <TextView
        android:id="@+id/tvSummaryPlanning"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="Libellé"
        android:textSize="16sp"
        android:textColor="@color/textlistview"
        android:layout_toRightOf="@+id/tvHeurePlanning"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tvLieuxPlanning"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="Lieux"
        android:textSize="16sp"
        android:textColor="@color/textlistview"
        android:layout_below="@+id/tvSummaryPlanning"
        android:layout_toRightOf="@+id/tvHeurePlanning"
        android:singleLine="true" />


</RelativeLayout>