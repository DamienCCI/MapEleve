<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/bartextColorPrimary</item>
        <item name="actionMenuTextColor">@color/baractionMenuTextColor</item>
        <item name="android:textColorSecondary">@color/bartextColorSecondary</item>
        <item name="android:background">@color/bartopcolor</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TitleBarProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">14dip</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:layout_marginTop">14dip</item>
        <item name="android:indeterminate">true</item>
    </style>

</resources>
